
@model AdminPanel.Models.Vehicles

@{
    ViewBag.Title = "Vehicles";
}

<head>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Players.css" rel="stylesheet" type="text/css" />
</head>

<div class="page-title">
    <h2>Vehicles</h2>
</div>

<div class="players-table-parent">

    <div class="player-name-search-box-parent">
        @using (Html.BeginForm("Index", "Vehicles", FormMethod.Get))
        {
            <input type="text" placeholder="Search..." name="vehicleSearchPID" />
            <select name="vehicleCount" onchange="this.form.submit()">
                <!-- Dosen't work for 5 atm -->
                <option value="5">5</option>
                <option value="10">10</option>
                <option value="15">15</option>
                <option value="20">20</option>
                <option value="25">25</option>
                <option value="50">50</option>
            </select>
        }
    </div>

    <asp:Content ID="BodyContent" runat="server" ContentPlaceHolderID="ContentPlaceHolder">
        <table width="100%" align="center" cellpadding="2" cellspacing="2" border="0" bgcolor="#006494">
            <tr align="left" style="background-color:#006494;color:White;">
                <td>ID</td>
                <td>Side</td>
                <td>Class name</td>
                <td>Type</td>
                <td>Alive</td>
                <td>Blacklist</td>
                <td>Active</td>
                <td>PID</td>
                <td>Edit</td>
            </tr>
            @Html.Raw(Model.getVehicles())
        </table>
    </asp:Content>
</div>