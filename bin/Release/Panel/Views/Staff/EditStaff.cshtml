@model AdminPanel.Models.EditStaff


@{
    ViewBag.Title = "Edit Staff";

}

@using AdminPanel.Helpers

<head>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/EditStaff.css" rel="stylesheet" type="text/css" />
</head>

<div class="page-title">
    <h2>@Model.accessLevel</h2>
    <h3>@Model.username</h3>
</div>

<div class="staff-box">
    <h4>ID: @Model.id</h4><br />
    <div class="form-parent-stats">
        @using (Html.BeginForm("UpdateInfo", "Staff", FormMethod.Post))
            {
            <div class="input-box"> <p>Username </p> @Html.TextBoxFor(model => model.username, new { value = Model.username }) </div>
            <div class="input-box"> <p>Access level </p> @Html.DropDownListFor(model => model.accessLevel, new SelectList(Enum.GetValues(typeof(Permissions.accessLevels))), Model.accessLevel) </div>
            <div class="input-box"> <p>Banned </p> @Html.TextBoxFor(model => model.banned, new { value = Model.banned }) </div> <br />
            <div class="input-box"> <p>Password </p> @Html.PasswordFor(model => model.password, new { value = Model.password }) </div> <br />
            @Html.HiddenFor(model => model.id, new { value = Model.id })
            <input type="submit" id="update" value="Update" />
        }
    </div>
</div>